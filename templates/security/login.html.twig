{% block title %}GestMat{% endblock %}

{% extends 'base.html.twig' %}


{% block body %}
<section class='section-register'>
    <div class="container-fluid">
        <div class="logo-title">
            <h1>Gestmat</h1>
        </div>
        <form method="post" class='form-register'>
            {% if error %}
                <div class="alert alert-danger"><p>{{ error.messageKey|trans(error.messageData, 'security') }}</p></div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <label for="inputEmail" class="srt">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Mon email..." required autofocus>
            <label for="inputPassword" class="srt">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Mon mot de passe..." required>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                Connexion
            </button>
            <a class="link-password" href="mailto:contact@gestmat.fr?subject=Perte de vos identifiants GestMat">Mot de passe oubli√© ?</a>
        </form> 
    </div>
</section>
{% endblock %}
